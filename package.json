    "@nuxtjs/tailwindcss": "^6.14.0",
    "@regle/nuxt": "1.8.0",
    "@splidejs/splide-extension-grid": "^0.4.1",
    "@tauri-apps/api": "^2.9.0",
    "@types/web-push": "^3.6.4",
    "@unhead/vue": "^2.0.19",
    "@vite-pwa/nuxt": "^1.0.7",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue-email/components": "^0.0.21",
    "@vue-email/render": "^0.0.9",
    "@vue-email/tailwind": "^0.2.0",
    "@vueuse/core": "^13.9.0",
