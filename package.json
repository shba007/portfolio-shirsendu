    "@types/k6": "^1.3.1",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "playwright-core": "^1.56.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "~5.9.3",
    "vitest": "^4.0.7"
